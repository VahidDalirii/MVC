@model CentiroHomeAssignment.Models.OrderRow
@{
    ViewData["Title"] = "GetByOrderNumber";
}

<h1>Get Orders By OrderNumber</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowOrdersByOrderNumber">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderNumber" class="control-label">Order number</label>
                <input asp-for="OrderNumber" class="form-control" />
                <span asp-validation-for="OrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAll">Back to Orders List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
