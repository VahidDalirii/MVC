@model List<Person>
@{
    ViewData["Title"] = "SetOwner";
}

<h1>SetOwner</h1>

<form action="" method="post">
    <select name="personId">
        @if (Model.Count==0)
        {
            <option disabled selected>No persons available</option>
        }

        @foreach (Person person in Model)
        {
            <option value="@person.Id">@person.Name</option>
        }
    </select>

    @if (Model.Count>0)
    {
        <input type="submit" name="submit" value="Confirm" class="btn btn-dark" />
    }
    else
    {
        <a href="/Persons/Create"> Create person</a>
    }
</form>


