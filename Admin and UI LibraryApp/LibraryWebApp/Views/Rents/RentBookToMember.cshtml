@model List<Repository.Models.Member>
@{
    ViewData["Title"] = "RentBookToMember";
}

@if (TempData["textmsg"] != null)
{
    @Html.Raw(TempData["textmsg"])
}

<h1>Renting a Book</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form action="" method="post">
            <label class="control-label" style=" margin-top:3%">Member</label>
            <div>
                <select name="memberId">
                    @if (Model.Count == 0)
                    {
                        <option disabled selected class="form-control">No Member available</option>
                    }

                    @foreach (var member in Model)
                    {
                        <option value="@member.Id" class="form-control">@member.Name </option>
                    }
                </select>
            </div>

            <div>
                <label class="control-label" style=" margin-top:8%">Rent Date</label>
                <input type="date" name="StartDate" value="" class="form-control" />
            </div>
            <div>
                <label class="control-label" style=" margin-top:8%">Return Date</label>
                <input type="date" name="EndDate" value="" class="form-control" />
            </div>

            <div style="margin-top:8%">
                <input type="submit" name="submit" value="Rent" class="btn btn-dark" /> |
                @Html.ActionLink("Go back to Book list", "Index", "Books")
            </div>

        </form>
    </div>
</div>

