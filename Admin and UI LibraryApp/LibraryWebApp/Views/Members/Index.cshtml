@model IEnumerable<Repository.Models.Member>

@{
    ViewData["Title"] = "Index";
}

<h1>List of all Members sorted by Name</h1>

<style>
    .Delete {color: red}
    .Rent {color: black}
    .MemberRents {color:forestgreen}
</style>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelNumber)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new {@class ="Delete" }) |
                    @Html.ActionLink("Member Rents", "MemberRents", "Rents", new { id = item.Id }, new {@class ="MemberRents" }) |
                    @Html.ActionLink("Rent a Book", "RentBook", "Rents", new { id = item.Id }, new {@class ="Rent" }) |
                    @Html.ActionLink("Rent a Film", "RentFilm", "Rents", new { id = item.Id }, new {@class ="Rent" })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Go back to home", "Index", "Home")
