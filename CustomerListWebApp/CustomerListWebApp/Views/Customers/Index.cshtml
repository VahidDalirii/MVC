@model IEnumerable<Repository.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

@if (Model.ToList().Count == 0)
{
    <h1>There is no Customers registered </h1>

    <p>
        <a asp-action="Create">Create New Customer</a>
    </p>
}

else
{
    <h1>List of all Customers</h1>

    <p>
        <a asp-action="Create">Create New Customer</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TelNumber)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelNumber)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                        @Html.ActionLink("Show Orders", "CustomerOrders", "Orders", new { id = item.Id }) |
                        @Html.ActionLink("Create Order", "Create", "Orders", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


<div>
    @Html.ActionLink("Back to Home", "Index", "Home")
</div>
