@model List<Repository.Models.Customer>
@{
    ViewData["Title"] = "CreateOrder";
}

@if (TempData["textmsg"] != null)
{
    @Html.Raw(TempData["textmsg"])
}

<h1>Create Order</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <p>*Obligatory fields</p>
        <hr />
        <form action="" method="post">
            <label class="control-label" style=" margin-top:3%">Member</label>
            <div>
                <select name="customerId">
                    @if (Model.Count == 0)
                    {
                        <option disabled selected class="form-control">No Customer available</option>
                    }

                    @foreach (var customer in Model)
                    {
                        <option value="@customer.Id" class="form-control">@customer.Name </option>
                    }
                </select>
            </div>

            <div>
                <label class="control-label" style=" margin-top:8%">*Title</label>
                <input type="text" name="Title" value="" class="form-control" />
            </div>
            <div>
                <label class="control-label" style=" margin-top:8%">*Cost</label>
                <input type="text" name="Cost" value="" class="form-control" />
            </div>

            <div class="form-group" style="padding-top: 5%">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


