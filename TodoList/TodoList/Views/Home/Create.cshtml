@model TodoList.Models.Todo

@{
    ViewData["Title"] = "Create";
}


@if (TempData["textmsg"] != null)
{
    @Html.Raw(TempData["textmsg"])
}

<head>
    <link rel="stylesheet" href="@Url.Content("~/css/Site.css")" type="text/css" />
</head>

<h1>Create</h1>

<h4>Todo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" required />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Priority</p>
                <input type="radio" name="priority" value="High" required style="float:left; margin-right:10px" /><p>High</p>
                <input type="radio" name="priority" value="Medium" style="float:left;margin-right:10px" /><p>Medium</p>
                <input type="radio" name="priority" value="Low" style="float:left;margin-right:10px" /><p>Low</p>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <form action="/Home">
        <input type="submit" value="Back to Home" class="btn btn-primary" />
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
