@model IEnumerable<Repository.Models.Rent>

@{
    ViewData["Title"] = "Index";
}

<h1>List of all Rents sorted by Member Name</h1>

<style>
    .Delete {color:red}
</style>

<table class="table">
    <thead>
        <tr>
            <th>
                Member
            </th>
            <th>
                Rented Item
            </th>
            <th>
                Rent Date
            </th>
            <th>
                Return Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RentingMember.Name)
                </td>
                @if (item.RentedBook != null)
                {
                    <td>
                        [Book] @Html.DisplayFor(modelItem => item.RentedBook.Title)
                    </td>
                }
                else
                {
                    <td>
                        [Film] @Html.DisplayFor(modelItem => item.RentedFilm.Title)
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new {@class ="Delete" })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Go back to home", "Index","Home")
