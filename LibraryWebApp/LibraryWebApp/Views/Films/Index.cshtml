@model IEnumerable<Repository.Models.Film>

@{
    ViewData["Title"] = "Index";
}

<h1>List of all Films sorted by Title</h1>

<style>
    .Delete {color: red}
    .Rent {color: black}
</style>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Copies)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Copies)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "Delete" }) |
                    @Html.ActionLink("See all Rents", "FilmRents", "Rents", new { id = item.Id }, new { @class = "Rent" }) |
                    @Html.ActionLink("Rent this Film", "RentFilmToMember", "Rents", new { id = item.Id }, new { @class = "Rent" }) 
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Go back to home", "Index", "Home")
